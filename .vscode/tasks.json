{
    "version": "2.0.0",
    "label": "C/C++: cl.exe build active file",
    "type": "shell",
    "command": "cl.exe",
    "args": [
        "/EHsc",
        "/std:c++20",
        "${file}"
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    },
    "problemMatcher": [
        "$msCompile"
    ],
    "detail": "Task for MSVC build",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                    "/Zi",
                    "/EHsc",
                    "/std:c++20",
                    "/nologo",
                    "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "${file}",
                    "${fileDirname}\\DeckManager.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}